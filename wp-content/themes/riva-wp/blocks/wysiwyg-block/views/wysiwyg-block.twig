{#
/**
 * Block Name: WYSIWYG
 *
 * This is the template that displays a 'WYSIWYG' block.
 *
 * Variables:
 * - content
 *  - heading
 *  - layout
 *  - wysiwyg (description field)
 * - block
 *  - id
 *  - className
 * - is_preview
 */
#}
{# Process Fields #}
{% set layout = content.layout %}
{% set heading = content.heading %}
{% set text = content.wysiwyg %}

{# Build Attributes #}
{% set classes = 'block module module--wysiwyg my-3 my-md-5' %}
{% set id = 'wysiwyg-id--' ~ block.id %}

{% block wysiwyg %}
	{# Markup #}
	<div
		id="{{ id }}"
		class="{{ classes }} {{ block.className ? block.className : '' }}"
	>
  <div class="container--narrow">
    <div class="row">
      <div class="col-12">
        {% if text %}
          <div>{{ text }}</div>
        {% endif %}
      </div>
    </div>
  </div>
  </div>
{% endblock %}

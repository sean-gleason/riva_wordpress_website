<div class='search-card__container'>

    <div class='search-card__index'>
        <h3>{{ index }}.</h3>
    </div>
    
    <div class='search-card__preview'>
        <h3><a href='{{url}}'>{{ title }}</a></h3>
        {% if preview | length > 0 %}
            <p>{{ preview }}</p>
        {% endif %}
    </div>

    {% if image %}
        <div class='search-card__image'>
            <img src='{{ image }}' />
        </div>
    {% endif %}
</div>